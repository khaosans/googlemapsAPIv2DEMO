package com.googlemaps.demo;

import java.io.BufferedWriter;
import java.io.File;
import java.io.FileWriter;
import java.io.IOException;

public class FileOut {

	public FileOut() {

		try {
			File file = new File(
					"C:/Users/Solus/Dropbox/CS202/workspace/FileOutput/test.txt");
			BufferedWriter output = new BufferedWriter(new FileWriter(file,
					true));
			output.close();
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
	
	public void add(String to_add){
		try {
			
			String text = to_add;
			File file = new File("C:/Users/Solus/Dropbox/CS202/workspace/FileOutput/test.txt");
			BufferedWriter output = new BufferedWriter(new FileWriter(file,
					true));
			output.write("\n"+text);
			output.close();
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
}